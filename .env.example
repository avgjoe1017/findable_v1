# Findable Score Analyzer - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://findable:findable@localhost:5432/findable

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# OBSERVATION PROVIDERS
# =============================================================================
# OpenRouter (primary - aggregator)
OPENROUTER_API_KEY=sk-or-v1-xxx

# OpenAI (fallback)
OPENAI_API_KEY=sk-xxx

# Default model for observations
OBSERVATION_MODEL=auto

# =============================================================================
# EMBEDDINGS
# =============================================================================
# Local model (sentence-transformers)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# =============================================================================
# STORAGE (S3-compatible)
# =============================================================================
STORAGE_BUCKET_NAME=findable-artifacts
STORAGE_ENDPOINT_URL=https://xxx.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=xxx
STORAGE_SECRET_KEY=xxx
STORAGE_REGION=auto

# =============================================================================
# CRAWLER DEFAULTS
# =============================================================================
CRAWLER_MAX_PAGES=250
CRAWLER_MAX_DEPTH=3
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=FindableBot/1.0 (+https://findable.ai/bot)

# =============================================================================
# APPLICATION
# =============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# SENTRY (optional)
# =============================================================================
SENTRY_DSN=
