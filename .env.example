# =============================================================================
# Findable Score Analyzer - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Railway, set these as environment variables in the dashboard
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL with pgvector)
# =============================================================================
# Railway provides DATABASE_URL automatically when you add Postgres
DATABASE_URL=postgresql+asyncpg://findable:findable@localhost:5432/findable

# =============================================================================
# REDIS
# =============================================================================
# Railway provides REDIS_URL automatically when you add Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION (JWT)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# OBSERVATION PROVIDERS
# =============================================================================
# At least one API key is required for observation runs

# OpenRouter (primary - aggregator)
OPENROUTER_API_KEY=sk-or-v1-xxx

# OpenAI (fallback)
OPENAI_API_KEY=sk-xxx

# Default model for observations
OBSERVATION_MODEL=auto

# =============================================================================
# EMBEDDINGS
# =============================================================================
# Local model (sentence-transformers)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# =============================================================================
# STORAGE (S3-compatible, optional)
# =============================================================================
STORAGE_BUCKET_NAME=findable-artifacts
STORAGE_ENDPOINT_URL=https://xxx.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=xxx
STORAGE_SECRET_KEY=xxx
STORAGE_REGION=auto

# =============================================================================
# CRAWLER DEFAULTS
# =============================================================================
CRAWLER_MAX_PAGES=250
CRAWLER_MAX_DEPTH=3
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=FindableBot/1.0 (+https://findable.ai/bot)

# =============================================================================
# APPLICATION
# =============================================================================
ENV=development           # development | production | test
DEBUG=true                # Set to false in production
LOG_LEVEL=INFO           # DEBUG | INFO | WARNING | ERROR

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# STRIPE (Billing) - Day 27
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs (create in Stripe dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_YEARLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_xxx
STRIPE_PRICE_AGENCY_MONTHLY=price_xxx
STRIPE_PRICE_AGENCY_YEARLY=price_xxx

# =============================================================================
# RAILWAY-SPECIFIC (Auto-set by Railway)
# =============================================================================
# PORT=8000                      # Railway sets this automatically
# RAILWAY_ENVIRONMENT=production # Railway environment name
# RUN_MIGRATIONS=true            # Run migrations on startup (default: true)
