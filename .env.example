# =============================================================================
# Findable Score Analyzer - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Railway, set these as environment variables in the dashboard
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL with pgvector)
# =============================================================================
# Railway provides DATABASE_URL automatically when you add Postgres
DATABASE_URL=postgresql+asyncpg://findable:findable@localhost:5432/findable

# =============================================================================
# REDIS
# =============================================================================
# Railway provides REDIS_URL automatically when you add Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AUTHENTICATION (JWT)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# RATE LIMITING
# =============================================================================
# Set to false to disable rate limiting in development (useful for testing)
RATE_LIMIT_ENABLED=true

# =============================================================================
# OBSERVATION PROVIDERS (Real AI Model Queries)
# =============================================================================
# Observation measures how real AI models respond to questions about your site.
# At least one API key is required for real observation runs.
# Without keys, observations will use MockProvider (returns canned responses).
#
# Provider priority: OpenRouter (primary) -> OpenAI (fallback) -> Mock (no keys)
#
# To enable real observations:
#   1. Get an API key from https://openrouter.ai/keys (recommended)
#      OR https://platform.openai.com/api-keys
#   2. Set the appropriate key below
#   3. Ensure your account has credits/billing set up

# OpenRouter (primary - aggregator with model switching)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxx

# OpenAI (fallback when OpenRouter unavailable)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# Default model for observations (must be in allowlist below)
# Recommended: openai/gpt-4o-mini (cost-effective, good quality)
OBSERVATION_MODEL=openai/gpt-4o-mini

# Model allowlist (default models allowed in production):
#   OpenRouter format: openai/gpt-4o-mini, openai/gpt-4o, anthropic/claude-3-haiku,
#                      anthropic/claude-3-5-sonnet
#   Direct OpenAI:     gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# In test mode (ENV=test), all models are allowed.

# Guardrails - Cost and safety limits
OBSERVATION_MAX_COST_PER_RUN=1.0      # Max USD per observation run
OBSERVATION_MAX_QUESTIONS=25           # Max questions per observation
OBSERVATION_TIMEOUT_SECONDS=60         # Per-request timeout (seconds)
OBSERVATION_TOTAL_TIMEOUT_SECONDS=600  # Total run timeout (10 min)

# =============================================================================
# EMBEDDINGS
# =============================================================================
# Local model (sentence-transformers)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# Hugging Face token for faster model downloads (optional)
# Get key at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_xxx

# =============================================================================
# STORAGE (S3-compatible, optional)
# =============================================================================
STORAGE_BUCKET_NAME=findable-artifacts
STORAGE_ENDPOINT_URL=https://xxx.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=xxx
STORAGE_SECRET_KEY=xxx
STORAGE_REGION=auto

# =============================================================================
# CRAWLER DEFAULTS
# =============================================================================
CRAWLER_MAX_PAGES=250
CRAWLER_MAX_DEPTH=3
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=FindableBot/1.0 (+https://findable.ai/bot)

# =============================================================================
# APPLICATION
# =============================================================================
ENV=development           # development | production | test
DEBUG=true                # Set to false in production
LOG_LEVEL=INFO           # DEBUG | INFO | WARNING | ERROR

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
# Email provider: "sendgrid" (recommended) or "ses"
EMAIL_PROVIDER=sendgrid

# SendGrid API key (get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.xxx

# From address and name for outgoing emails
EMAIL_FROM_ADDRESS=noreply@findable.ai
EMAIL_FROM_NAME=Findable

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# STRIPE (Billing) - Day 27
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs (create in Stripe dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_YEARLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_xxx
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_xxx
STRIPE_PRICE_AGENCY_MONTHLY=price_xxx
STRIPE_PRICE_AGENCY_YEARLY=price_xxx

# =============================================================================
# RAILWAY-SPECIFIC (Auto-set by Railway)
# =============================================================================
# PORT=8000                      # Railway sets this automatically
# RAILWAY_ENVIRONMENT=production # Railway environment name
# RUN_MIGRATIONS=true            # Run migrations on startup (default: true)
